{
  "scripts": {
    "build":      "docker run --rm -v $PWD:/app              hut6/webpack:1.9",
    "dev-server": "docker run --rm -v $PWD:/app -p 9090:8080 hut6/webpack:1.9 webpack-dev-server -d --env.devServer=${WEBPACK_HOST:-$(docker-machine ip)}:9090",
    "dev-ssl":    "docker run --rm -v $PWD:/app -p 9090:8080 hut6/webpack:1.9 webpack-dev-server -d --env.devServer=${WEBPACK_HOST:-$(docker-machine ip)}:9090 --env.https",
    "npm": "docker run -v $PWD:$PWD -w $PWD node:9-alpine npm"
  }
}
